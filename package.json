{
  "name": "modern-webapp",
  "version": "1.0.0",
  "description": "A configuration boilerplate for a modern frontend SPA workflow.",
  "scripts": {
    "clean": "rimraf build",
    "lint": "eslint src",
    "build:dev": "npm run clean && webpack --env=dev --progress --colors",
    "build:dist": "npm run clean && webpack -p --env=prod --progress --colors",
    "serve:dev": "webpack-dev-server --env=dev --progress --colors --hot --inline",
    "serve:dist": "webpack-dev-server -p --env=prod --progress --colors --hot --inline --compress",
    "precommit": "eslint --max-warnings 0 src"
  },
  "keywords": [
    "react",
    "router",
    "redux",
    "postcss",
    "precss",
    "css modules",
    "sass",
    "webpack",
    "babel",
    "eslint",
    "Bulma"
  ],
  "author": {
    "name": "Robert Matych",
    "email": "robertsmatych@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rmatych/Modern-Webapp"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.2",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "browserslist": "2.9.1",
    "css-loader": "0.28.7",
    "cssnano": "3.10.0",
    "eslint": "4.12.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-optimize-regex": "1.1.4",
    "eslint-plugin-react": "7.5.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "image-webpack-loader": "3.4.2",
    "node-sass": "4.7.2",
    "postcss": "6.0.14",
    "postcss-import": "11.0.0",
    "postcss-loader": "2.0.9",
    "precss": "2.0.0",
    "rimraf": "2.6.2",
    "sass-loader": "6.0.6",
    "style-loader": "0.19.0",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.7.1",
    "webpack-merge": "4.1.1"
  },
  "dependencies": {
    "bulma": "0.6.1",
    "history": "4.7.2",
    "preact": "8.2.6",
    "preact-compat": "3.17.0",
    "prop-types": "15.6.0",
    "react": "16.1.1",
    "react-dom": "16.1.1",
    "react-redux": "5.0.6",
    "react-router-redux": "4.0.8",
    "redux": "3.7.2"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions"
  ]
}
